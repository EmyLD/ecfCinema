<html lang="en">
  <head>
    <title>Login</title>
  </head>
  <body>
    <main>
      <div
        style="height: 100%"
        class="d-flex flex-column justify-content-center align-self-center"
      >
        <div
          style="height: 100%"
          class="d-flex flex-column justify-content-center align-self-center"
        >
            <h1>Identification</h1>
      
              <form action="login" method="post">
                
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email"  name="email"  required>
                  <small id="emailHelp" class="form-text text-muted font-italic">Please provide your E-mail</small>
                </div>

                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" name="password"  required>
                  <small id="pwdHelp" class="form-text text-muted font-italic">Password should be at least 4 characters.</small>
                </div>
                
                <input type="submit" class="btn btn-success" value="Login">
              </form>
          
              <a href="register">Pas encore de compte ?</a>
            

              {% block error %}
                {% if type %}
                  <div class="alert alert-danger" role="alert">
                      {{type}}
                  </div>
                {% else %}
                  <div> 
                  </div>
                {% endif %}
              {% endblock %}
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
