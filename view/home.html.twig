<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Accueil</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main>
      <!-- Carousel Start -->
      <div class="container-fluid">
        <div id="headerCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            {# Caroussel pour affichage des véhicules #} {% for item in
            movies.getAll() %} {% set current_movie = item %}

            <div class="carousel-item {{ loop.first ? 'active' : '' }}">
              <div class="container">
                <div
                  class="row align-items-center justify-content-center justify-content-lg-start"
                >
                  <div
                    class="col-6 col-lg-7 text-center text-lg-start h-100 justify-content-start align-self-start"
                  >
                    <h1 class="text-black mb-3 animated slideInDown">
                      {{ loop.index }} - {{ item.getTitle }}
                    </h1>

                    <p>
                      Réalisé en <strong>{{ item.getYear }}</strong> par
                      <strong>{{ item.getDirector }}</strong>
                    </p>

                    {% for item in roles.getByMovie(current_movie.getId()) %}
                    {%set name = item.getActor().getName() %} {% set firstName =
                    item.getActor().getFirstName() %} {% set current_actor =
                    name ~ " " ~ firstName %}

                    <p>
                      avec <strong>{{ current_actor }}</strong> dans le role de
                      <strong>{{ item.getCharacter }}</strong>
                    </p>

                    {% endfor %}
                  </div>

                  <div class="col-6 w-25 col-lg-7 text-center text-lg-start">
                    <img
                      src="{{ item.getPoster }}"
                      alt=""
                      class="w-100 h-100 shadow rounded"
                      id="img_movie"
                    />
                  </div>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="container w-25 text-center mt-3">
        <button
          class="btn btn-outline-dark w-25 shadow text-center"
          type="button"
          data-bs-target="#headerCarousel"
          data-bs-slide="prev"
        >
          Previous
        </button>
        <button
          class="btn btn-outline-dark w-25 shadow"
          type="button"
          data-bs-target="#headerCarousel"
          data-bs-slide="next"
        >
          Next
        </button>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
